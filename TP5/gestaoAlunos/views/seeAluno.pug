extends layoutNotas
block content
        <div style="margin:1cm;">
            .w3-container
                header.w3-container.w3-green
                    h3 Student
                .w3-container
                    table.w3-table-all
                        tr
                            th Identificador
                            th Nome
                            th Curso
                        tr
                            td= al.identificador
                            td= al.nome
                            td= al.curso
            .w3-container
                header.w3-container.w3-green
                    h3 Notas
                .w3-container
                    table.w3-table-all
                        tr
                            th Nota(indicador)
                            th Nota(valor)
                            td
                                
                        each n in al.notas
                            tr
                                td= n.indicador
                                td= n.nota
                                td
                                    button.w3-button.w3-green(onclick="apagaNota('" + n.indicador + ',' + al.identificador + "')") Remover nota
                    a(href='/alunos') Voltar à página principal
        </div>